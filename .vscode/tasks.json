{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "MinGW Makefiles",
                "-DCMAKE_C_COMPILER=C:/Program Files/LLVM/bin/clang.exe",
                "-DCMAKE_CXX_COMPILER=C:/Program Files/LLVM/bin/clang++.exe",
                "-DCMAKE_RC_COMPILER=C:/MinGW/bin/windres.exe",
                "-DCMAKE_C_FLAGS=--target=x86_64-w64-mingw32",
                "-DCMAKE_CXX_FLAGS=--target=x86_64-w64-mingw32",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // 设置为默认构建任务
            },
            "problemMatcher": ["$gcc"],
            "detail": "Running CMake to configure the project"
        },
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "CMake: configure",
            "problemMatcher": ["$gcc"],
            "detail": "Building the project using CMake"
        },
        {
            "label": "CMake: clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target", "clean"
            ],
            "group": {
                "kind": "clean",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Cleaning the build directory"
        }
    ]
}
